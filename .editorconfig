# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.rs]
indent_size = 4

[*.{java,kt,cs}]
indent_size = 4

[*.{c,cpp,cc,cxx,h,hpp}]
indent_size = 4

[*.rb]
indent_size = 2

[*.php]
indent_size = 4

[*.go]
indent_style = tab

[*.{ts,tsx,jsx}]
indent_size = 2

[*.{vue,svelte,astro}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{toml,ini,cfg}]
indent_size = 2

[*.{html,xml}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.sql]
indent_size = 2

[*.{proto,graphql,gql}]
indent_size = 2

[*.{sh,bash,zsh}]
indent_size = 2

[Dockerfile*]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
